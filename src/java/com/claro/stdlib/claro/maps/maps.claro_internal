function keySet<K,V>(m: {K:V}) -> {K} {
  var res: {K};
  $$BEGIN_JAVA
  res = new ClaroSet(
    Types.SetType.forValueType(m.getClaroType().parameterizedTypeArgs().get(Types.MapType.PARAMETERIZED_TYPE_KEYS)),
    m.keySet());
  $$END_JAVA
  return res;
}
