function isEmpty<K,V>(m: {K:V}) -> boolean {
  return len(m) == 0;
}
function isEmptyMut<K,V>(m: mut {K:V}) -> boolean {
  return len(m) == 0;
}


function containsValue<K,V>(m: {K:V}, v: V) -> boolean {
  var res: boolean;
  $$BEGIN_JAVA
  res = m.containsValue(v);
  $$END_JAVA
  return res;
}
